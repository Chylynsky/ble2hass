# Only for single-threaded boards (for example SOLO-1), comment otherwise
CONFIG_FREERTOS_UNICORE=y

# WiFi settings
CONFIG_ESP32_WIFI_ENABLED=y
CONFIG_ESP32_WIFI_SW_COEXIST_ENABLE=y

# Partition table settings
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"
CONFIG_PARTITION_TABLE_FILENAME="partitions.csv"

# NimBLE settings
CONFIG_BT_ENABLED=y
CONFIG_BTDM_CTRL_MODE_BLE_ONLY=y
CONFIG_NIMBLE_ENABLED=y
CONFIG_NIMBLE_ROLE_CENTRAL=y
CONFIG_BT_NIMBLE_MAX_CONNECTIONS=2
CONFIG_BT_NIMBLE_MAX_CCCDS=8

# FreeRTOS task settings
CONFIG_MAIN_TASK_STACK_SIZE=4024
CONFIG_ESP32_PTHREAD_TASK_STACK_SIZE_DEFAULT=4024

# ESP32 Logs
CONFIG_LOG_DEFAULT_LEVEL_NONE=y
CONFIG_LOG_DEFAULT_LEVEL=0
CONFIG_LOG_MAXIMUM_EQUALS_DEFAULT=y
CONFIG_LOG_MAXIMUM_LEVEL=0
CONFIG_BOOTLOADER_LOG_LEVEL_NONE=y
CONFIG_BOOTLOADER_LOG_LEVEL=0

# Esptool
CONFIG_ESPTOOLPY_FLASHSIZE_4MB=y

# Panic handler
CONFIG_ESP_SYSTEM_PANIC_SILENT_REBOOT=y

# Compiler
CONFIG_BOOTLOADER_COMPILER_OPTIMIZATION_SIZE=y
CONFIG_COMPILER_OPTIMIZATION_PERF=y
CONFIG_COMPILER_OPTIMIZATION_ASSERTIONS_DISABLE=y
CONFIG_CXX_EXCEPTIONS=y
